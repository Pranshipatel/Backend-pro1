<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="main w-full h-screen p-3 bg-slate-900">
        <h2 class="text-white text-xl mb-3 ">Notes</h2>
       <div  class="form w-full h-1/3   flex flex-col">
        <form action="/create" method="post">
            <input class="w-full mt-1 rounded text-slate-400 outline-none bg-slate-800 p-1" type="text" placeholder="Title" name="name">
            <textarea class="w-full mt-2 rounded bg-slate-800 outline-none text-slate-400 p-1" placeholder="Your text here..."  name="detail"></textarea>
            <button class="mt-2 bg-teal-600 text-white px-2 py-1 rounded">Create task</button>
        </form>
       </div>
       <div class="card flex flex-wrap gap-2">

        <% if(files.length > 0){ %>
         <%   files.forEach(function(file){ %>
            <div class="cards1 w-56  text-zinc-200 bg-gray-700 rounded-md p-2">
                <h1 class="text-2xl mb-2"><%= file.name%></h1>
                <div class="read flex justify-between">
                    <p class="text-slate-400">
                        <% if(file.detail.length > 9){ %>
                         <%= file.detail.substring(0,10) + "..."%>
                      <%  } else{   %>
                         <%= file.detail %>
                     <% } %>
                    </p>
                    <a class="text-teal-600" href="/read/<%= file.name %>">Read more....</a>
                </div>
                <div class="bottom flex justify-between mt-3">
                    <a class="text-slate-300 text-[13px]" href="/edit/<%=file.name %>">Edit filename</a>
                    <a href="/delete/<%= file.name %>"><i class="ri-delete-bin-6-line"></i></a>
                </div>
            </div>
           <% }) %>
      <%  } else {%>
   
        <h2 class="text-slate-400">No task here....</h2>
  <%    } %>
       </div>
    </div>
</body>
</html>